    </model>

    <!-- Marcador X en (5,2) -->
    <model name="x_marker">
      <static>true</static>
      <pose>8 6 0.01 0 0 0</pose>
      <link name="link">

        <!-- Barra 1 -->
        <visual name="bar_1">
          <pose>0 0 0 0 0 0.785398</pose>
          <geometry>
            <box>
              <size>0.5 0.1 0.02</size>
            </box>
          </geometry>
          <material>
