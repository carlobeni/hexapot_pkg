<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="hexapod_robot_gazebo">

    <!-- =============== Gazebo =============== -->
    <gazebo>
      <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>$(find hexapod_pkg)/config/my_hexapod_controllers.yaml</parameters>
      </plugin>
    </gazebo>

  </xacro:macro>
    
</robot>
